<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/common.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddBookController">
   <children>
      <VBox alignment="CENTER" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="bookTitle" prefHeight="50.0" promptText="Book Title">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="bookID" prefHeight="50.0" promptText="Book ID">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="bookAuthor" prefHeight="50.0" promptText="Book Author">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
      		<TextField fx:id="publisher" prefHeight="50.0" promptText="Publisher">
      			<font>
      				<Font size="16.0" />
      			</font>
      			<opaqueInsets>
      				<Insets />
      			</opaqueInsets>
      			<VBox.margin>
      				<Insets />
      			</VBox.margin>
      		</TextField>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" layoutX="200.0" layoutY="318.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="300.0">
         <children>
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveCancelAction" prefHeight="40.0" prefWidth="150.0" text="Save">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#saveCancelAction" prefHeight="40.0" prefWidth="150.0" text="Cancel">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
